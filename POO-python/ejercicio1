class Estudiante():
    def __init__(self,nombre,edad,semestre,carrera):
        self.nombre = nombre
        self.edad = edad
        self.semestre = semestre
        self.carrera = carrera
    def estudiar(self):
        print(f'el estudiante con nombre: {self.nombre} esta estudiando')

nombre = input("Escribe tu nombre:")
edad = input("Escribe tu edad:")
semestre = input("Semestre:")
carrera = input("Carrera:")
estudiante1 = Estudiante(nombre,edad,semestre,carrera)
estudiar = input("Â¿EstÃ¡s estudiando?:")

if (estudiar == "si"):
    estudiante1.estudiar()
else:
    print(f'{estudiante1.nombre} es gei')